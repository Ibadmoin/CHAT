<% layout('layouts/boilerplate.ejs') %>

    <div class="container align-items-center mb-5">
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <div class="card shadow py-5 px-4">
                    <div class="card-body">
                        <h3 class="card-title text-center mb-3" style="font-family:cursive;">Your Profile</h3>
                        <form action="/profile/<%= user._id %>?_method=PUT " method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>

                            <div class="row">
                                <div class="col-12 text-center mb-3">
                                    <label class="msg_attach_btn"><img src="<%= user.photo[0].url %> " id="output" alt="" width="100" height="100" style="border-radius: 50%;"> 
                                        <input class="form-contorl" type="file" id="media" name="media" style="display: none;" onchange="loadFile(event)" accept="image/*" required> <div class="invalid-feedback">
                                            Please Upload Profile Photo.
                                        </div></label>

                                </div>
                            </div>
                            <div class="mb-1">
                                <input class="form-control" type="text" id="name" name="name" placeholder="Full name" required autofocus autocomplete="off" value="<%= user.name %> ">
                                <div class="valid-feedback">Looks Good !</div>
                                <div class="invalid-feedback">
                                    Please enter your Full Name.
                                </div>
                            </div>
                            <div class="mb-1">
                                <input class="form-control" type="email" id="email" name="email" placeholder="Eamil" required autocomplete="off" value="<%= user.email %> ">
                                <div class="valid-feedback">Looks Good !</div>
                                <div class="invalid-feedback">
                                    Please choose an Email.
                                </div>
                            </div>
                            <button class="btn btn-outline-success btn-sm col-12 mt-3">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        var loadFile = function(event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>