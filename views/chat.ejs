<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" type="image/png" href="/logo.png">
    <title>Turf</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
</head>

<body>

    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="p-4 pt-5">
                <a href="#" class="img logo rounded-circle mb-5" style="background-image: url(/logo.png);"></a>
                <p class="text-center mb-4" style="font-size: large; font-family: cursive;">
                    <%= currentUser.username.toUpperCase() %>
                </p>
                <ul class="list-unstyled components mb-5">
                    <% for (let user of userList){ %>
                        <% if(user._id.equals(currentUser._id)){ %>
                            <% }else{ %>  
                        <li><a href="/<%= user._id %> ">
                                <%= user.username %>
                            </a></li>
                            <% } %> 
                        <% } %>
                </ul>
                <div class="footer">
                    <ul class="list-unstyled">
                        <li><a href="/logout">logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div id="content" class="p-4 p-md-5">
            <button type="button" id="sidebarCollapse" class="btn btn-default">
                <i class="fa fa-bars"></i>
                <span class="sr-only"></span>
              </button>
            <div>
                <% for (let msg of msgs){ %>
                    <% if(msg.author.equals(currentUser._id)){ %>
                        <div class="offset-md-7 col-md-5 col-sm-9 p-1 mb-2 shadow-sm bg-primary text-right text-white">
                            <% }else{ %>
                                <div class="col-md-5 col-sm-9 p-1 mb-2 shadow-sm bg-success text-white">
                                    <% } %>
                                        <%= msg.description %>
                                            <% if(msg.file.length> 0){ %>
                                                <hr>
                                                <a
                                                    href="<%= msg.file[0].url.replace('/upload', '/upload/fl_attachment').replace('.pdf','.jpg') %> ">
                                                    <div class="row shadow-sm text-center">
                                                        <div class="col-1"><img src="/download-file.png"></div>
                                                        <div class="col-11"><span class="text-center">Click Here To
                                                                Dowload The File</span></div>
                                                    </div>
                                                </a>
                                                <% }else{ %>
                                                    <% } %>
                                </div>
                                <% } %>
                        </div>
            </div>

            <div class="">
                <form action="/<%=id%>" method="POST" enctype="multipart/form-data"
                    class="mb-3 needs-validation fixed-bottom offset-md-3 col-md-8" novalidate>
                    <textarea type="text" class="form-control mb-2" placeholder="write something"
                        name="msg[description]" required></textarea>
                    <input type="text" name="friend" value="<%=id%>" style="display: none;">
                    <div class="row">
                        <div class="col-md-11">
                            <input type="file" class="form-control mb-2" id="media" name="media">
                        </div>
                        <div class="col-md-1">
                            <button class="btn btn-outline-success pull-right">Send</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"
        integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js"
        integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj"
        crossorigin="anonymous"></script>
    <script src="/jquery.min.js"></script>
    <script src="/main.js"></script>
    <script src="/validateForm.js"></script>
</body>

</html>