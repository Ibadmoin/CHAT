<html>

<head>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" type="text/css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Turf | Chat</title>
</head>

<body style="padding-top : 30px;">
    <div class="container">
        <div class="messaging">
            <div class="inbox_msg">
                <div class="inbox_people">
                    <div class="headind_srch">
                        <div class="recent_heading col-9">
                            <h4>
                                <%= currentUser.name.toUpperCase() %>
                            </h4>
                            <p>
                                <%= currentUser.email %>
                            </p>
                        </div>
                        <div class="srch_bar col-3">
                            <a href="/logout" class="btn btn-danger btn-sm"><i class="fa fa-sign-out"></i> Logout</a>
                        </div>
                    </div>
                    <div class="inbox_chat">
                        <% for (let user of userList){ %>
                            <% if(user._id.equals(currentUser._id)){ %>
                                <% }else{ %>
                                    <a href="/<%= user._id %>">
                                        <div class="chat_list">
                                            <div class="chat_people">
                                                <div class="chat_img"> <img src="https://ptetutorials.com/images/user-profile.png" alt="sunil"> </div>
                                                <div class="chat_ib">
                                                    <h5>
                                                        <%= user.name %>
                                                    </h5>
                                                    <p>
                                                        <%= user.email %>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                    <% } %>
                                        <% } %>
                    </div>
                </div>
                <div class="mesgs">
                    <div class="msg_history">
                        <% for (let msg of msgs){ %>
                            <% if(msg.author.equals(currentUser._id)){ %>
                                <div class="outgoing_msg">
                                    <div class="sent_msg">
                                        <div>
                                            <% }else{ %>
                                                <div class="incoming_msg">
                                                    <div class="incoming_msg_img"> <img src="https://ptetutorials.com/images/user-profile.png" alt="Profile Photo"> </div>
                                                    <div class="received_msg">
                                                        <div class="received_withd_msg">

                                                            <% } %>
                                                                <p>
                                                                    <%= msg.description %>
                                                                        <% if(msg.file.length> 0){ %>
                                                                            <a class="btn btn-warning text-white btn-sm ml-2" href="<%= msg.file[0].url.replace('/upload', '/upload/fl_attachment').replace('.pdf','.jpg') %> ">
                                                                                <i class="fa fa-download"></i> Download the File
                                                                            </a>
                                                                            <% } %>
                                                                </p>


                                                                <span class="time_date"><%= msg.CreatedAt%></span></div>
                                                    </div>
                                                </div>
                                                <% } %>
                                        </div>
                                        <form action="/<%=id%>" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
                                            <input type="text" name="friend" value="<%=id%>" style="display: none;">
                                            <div class="type_msg">
                                                <div class="input_msg_write">
                                                    <input type="text" class="write_msg" placeholder="Write Something" name="msg[description]" required />
                                                    <button class="msg_send_btn" type="submit"><i class="fa fa-paper-plane-o" aria-hidden="true"></i></button>
                                                    <label class="msg_attach_btn"><i class="fa fa-paperclip" aria-hidden="true"></i> <input type="file" id="media" name="media" style="display: none;"></label>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                    </div>
                </div>

                <script src="/validateForm.js"></script>
</body>

</html>