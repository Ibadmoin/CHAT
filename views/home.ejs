<% layout('layouts/boilerplate.ejs') %>

    <div class="container">
        <div class="messaging">
            <div class="inbox_msg">
                <div class="inbox_people">
                    <div class="headind_srch">
                        <div class="recent_heading col-10">
                            <div class="chat_img p-0"> <img src="<%= currentUser.photo[0].url%>" alt="No Profile" style="border-radius: 50%;"> </div>
                            <div class="row">
                                <div class="col-12">

                                    <a href="/profile/<%= currentUser._id %> " title="Edit Profile" style="text-decoration: none;">
                                        <h4>
                                            <%= currentUser.name.toUpperCase() %>
                                        </h4>
                                    </a>
                                    <p>
                                        <%= currentUser.email %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="srch_bar col-2">
                            <a href="/logout" class="btn btn-danger btn-sm"><i class="fa fa-sign-out"></i> Logout</a>
                        </div>
                    </div>
                    <div class="inbox_chat">
                        <% for (let user of userList){ %>
                            <% if(user._id.equals(currentUser._id)){ %>
                                <% }else{ %>
                                    <a href="/<%= user._id %>">
                                        <div class="chat_list">
                                            <div class="chat_people">
                                                <% if(user.photo.length > 0 ) {%>
                                                    <div class="chat_img"> <img src="<%= user.photo[0].url%>" alt="No Profile" style="border-radius: 50%;"> </div>
                                                    <% }else{ %>
                                                        <div class="chat_img"> <img src="https://ptetutorials.com/images/user-profile.png" alt="No Profile"> </div>
                                                        <% } %>
                                                            <div class="chat_ib">
                                                                <h5>
                                                                    <%= user.name %>
                                                                </h5>
                                                                <p>
                                                                    <%= user.email %>
                                                                </p>
                                                            </div>
                                            </div>
                                        </div>
                                    </a>
                                    <% } %>
                                        <% } %>
                    </div>
                </div>
                <div class="mesgs" style="color: white;">
                    <div class="msg_history" style="height: 580px;">
                        <p class="text-center"> <i class="fa fa-search"></i> Choose A Friend To Start A Chat</p>
                    </div>
                </div>
            </div>
        </div>
    </div>