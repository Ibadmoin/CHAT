<html>

<head>
    <link rel="icon" type="image/svg+xml" href="https://example.com/image.svg">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" type="text/css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Chat App</title>
</head>

<body style="padding-top : 30px;">
    <div class="container">
        <div class="messaging">
            <div class="inbox_msg">
                <div class="inbox_people">
                    <div class="headind_srch">
                        <div class="recent_heading col-10">
                            <div class="chat_img p-0"> <img src="<%= currentUser.photo[0].url%>" alt="No Profile" style="border-radius: 50%;"> </div>
                            <div class="row">
                                <div class="col-12">

                                    <a href="/profile/<%= currentUser._id %> " title="Edit Profile" style="text-decoration: none;">
                                        <h4>
                                            <%= currentUser.name.toUpperCase() %>
                                        </h4>
                                    </a>
                                    <p>
                                        <%= currentUser.email %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="srch_bar col-2">
                            <a href="/logout" class="btn btn-danger btn-sm"><i class="fa fa-sign-out"></i> Logout</a>
                        </div>
                    </div>
                    <div class="inbox_chat">
                        <% for (let user of userList){ %>
                            <% if(user._id.equals(currentUser._id)){ %>
                                <% }else{ %>
                                    <a href="/<%= user._id %>">
                                        <div class="chat_list">
                                            <div class="chat_people">
                                                <% if(user.photo.length > 0 ) {%>
                                                    <div class="chat_img"> <img src="<%= user.photo[0].url%>" alt="No Profile" style="border-radius: 50%;"> </div>
                                                    <% }else{ %>
                                                        <div class="chat_img"> <img src="https://ptetutorials.com/images/user-profile.png" alt="No Profile"> </div>
                                                        <% } %>
                                                            <div class="chat_ib">
                                                                <h5>
                                                                    <%= user.name %>
                                                                </h5>
                                                                <p>
                                                                    <%= user.email %>
                                                                </p>
                                                            </div>
                                            </div>
                                        </div>
                                    </a>
                                    <% } %>
                                        <% } %>
                    </div>
                </div>
                <div class="mesgs" style="color: white;">
                    <div class="msg_history">
                        <p class="text-center"> <i class="fa fa-search"></i> Choose A Friend To Start A Chat</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>